{
  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "jsx": "preserve",
    "target": "ES2017",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "resolveJsonModule": false,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noPropertyAccessFromIndexSignature": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": [
      "ES2017",
      "ES2020.BigInt",
      "DOM"
    ],
    "strict": true,
    // TODO: set to true
    "noImplicitAny": false,
    // TODO: set to true after typescript update
    //"useUnknownInCatchVariables": true,
    //"noImplicitOverride": true,
    "paths": {
      "@js/*": [
        "./js/*"
      ],
      "@ts/*": [
        "./js/__internal/*"
      ],
    }, 
    "outDir": "dist"
  },
  "exclude": [
    "artifacts",
    "node_modules",
    "**/dist",
    "playground",
    "js/renovation/**/*",
    "**/*.test.*",
  ],
  "include": [
    "js/**/*.ts",
    "js/**/*.tsx",
  ]
}
